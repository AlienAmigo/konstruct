    "start": "gulp",
    "lint-staged": "lint-staged"
  },
  "author": "Pyotr Ryzhov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlienAmigo/konstruct.git"
  },
  "lint-staged": {
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.scss": "stylelint --syntax=scss"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.8.6",
    "bemlint": "^1.6.1",
    "browser-sync": "^2.26.14",
    "del": "^4.0.0",
    "gh-pages": "^3.1.0",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-pretty-html": "^2.0.9",
    "gulp-pug": "^4.0.1",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "pug-lint": "^2.5.0",
    "stylelint": "^9.10.1",
    "stylelint-order": "^2.1.0",
    "stylelint-selector-bem-pattern": "^2.0.0"
  },
  "dependencies": {
    "svg4everybody": "^2.1.9"
